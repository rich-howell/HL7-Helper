{
  "name": "hl7-helper",
  "displayName": "HL7 Hover & IntelliSense",
  "description": "Hover, autocomplete, and diagnostics for HL7 v2 calls in Rhapsody/HAPI JS code.",
  "publisher": "RichHowell",
  "icon": "images/icon.png",
  "repository": {
    "url": "https://github.com/rich-howell/HL7-Helper"
  },
  "license": "MIT",
  "author": {
    "name": "Rich Howell",
    "url": "https://richhowell.com"
  },
  "version": "0.0.4",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other", 
    "Programming Languages"
  ],
  "keywords": [
    "hl7",
    "healthcare",
    "hover",
    "autocomplete",
    "intellisense",
    "rhapsody",
    "hapi"
  ],
  "files": [
  "out",
  "data",
  "package.json",
  "tsconfig.json",
  "images/icon.png",
  "CHANGELOG.md",
  "README.md",
  "images"  
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onCommand:hl7Helper.openSegmentSpec",
    "onCommand:hl7Helper.openDatatypeSpec"
  ],
  "contributes": {
    "commands": [
      {
        "command": "hl7Helper.openSegmentSpec",
        "title": "Open HL7 Segment Spec"
      },
      {
        "command": "hl7Helper.openDatatypeSpec",
        "title": "Open HL7 Datatype Spec"
      }
    ],
    "configuration": {
      "title": "HL7 Helper",
      "properties": {
        "hl7Helper.fnNames": {
          "type": "array",
          "default": ["getValue", "setValue", "getValues", "setValues"],
          "items": { "type": "string" },
          "description": "Rhapsody/HAPI functions to detect for HL7 hovers & CodeLens."
        },
        "hl7Helper.version": {
          "type": "string",
          "default": "v251",
          "enum": ["v231", "v240", "v251", "v27"],
          "description": "HL7 version used for hover metadata"
        },
        "hl7Helper.specBaseUrl": {
          "type": "string",
          "default": "https://hl7-definition.caristix.com/v2",
          "description": "Base URL for opening HL7 specs (segment & datatype pages)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "tslib": "^2.6.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0"
  }
}
